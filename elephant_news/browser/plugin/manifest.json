{
    "manifest_version": 3,
    "name": "The Whole Elephant",
    "version": "1.0",
    "description": "Enhances news articles by providing additional context, rebuttals, bias detection, and alternate perspectives.",
    "permissions": [
        "contextMenus",
        "scripting",
        "sidePanel",
        "tabCapture",
        "tabs"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background/service-worker.js"
    },
    "action": {
        "default_title": "The Whole Elephant"
    },
    "side_panel": {
        "default_path": "side_panel/panel.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ],
    "icons": {
        "16": "elephant.png",
        "48": "elephant.png",
        "128": "elephant.png"
    }
}
