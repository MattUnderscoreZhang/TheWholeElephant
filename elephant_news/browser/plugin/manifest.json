{
    "manifest_version": 3,
    "name": "The Whole Elephant News Analysis Plugin",
    "version": "1.0",
    "description": "Enhances news articles by providing additional context, rebuttals, bias detection, and alternate perspectives.",
    "permissions": [
        "contextMenus",
        "scripting",
        "sidePanel",
        "tabCapture",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_title": "Elephant Plugin"
    },
    "content_scripts": [
        {
            "matches": [ "http://*/*", "https://*/*" ],
            "js": [ "content-script.js" ]
        }
    ],
    "icons": {
        "16": "elephant.png",
        "48": "elephant.png",
        "128": "elephant.png"
    }
}
